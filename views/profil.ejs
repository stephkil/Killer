<%- include('./header.ejs') %>

<h1>  Profil : <%= username %> </h1>

<%- include ('./flash.ejs') %>


<div class="content">
    <h3 class="ui dividing header">  Info Player : <a><%= infoPlayer[2] %> parties </a> <br> 
    </h3>

    <div class="description">

        <div class="ui two column grid">
            
            <div class="column">
                <div class="image-container">
                    <img src="/assets/picture/survivant.png" >
                </div>
                Survivant :  <%= infoPlayer[3] %> <br>
            </div>

            <div class="column">
                <div class="image-container">
                    <img src="/assets/picture/topKiller.png" >
                </div>
                Top Killer :  <%= infoPlayer[4] %> <br> 
            </div>
            
        </div>

        <div class="ui two column grid">
            
            <div class="column">
                <div class="image-container">
                    <img src="/assets/picture/alphaKiller.png" >
                </div>
                Killer Alpha : <%= infoPlayer[5] %> <br> 
            </div>

            <div class="column">
                <div class="image-container">
                    <img src="/assets/picture/supremeKiller.png" >
                </div>
                Killer Suprême :  <%= infoPlayer[6] %> <br> 
            </div>
            
        </div>

        <br>
        <br>
        Nombre de kill :  <%= infoPlayer[7] %>  
    </div>

    <!--  <h3 class="ui dividing header">  Title :  <%= infoPlayer[1] %> || <a>0 / 10 </a></h3>  -->


    <h3 class="ui dividing header">  Success :  <a><%= infoPlayer[8].length %> / 10 </a></h3>

        <% for (var i = 0; i < success.length; i++ ) { %>
            <div class="column">

                    <% if(!success[i][3]){ %>
                        <div class="ui card"  style = "background-color: #a7a5a5; width: 100%">
                    <% } else { %>
                        <div class="ui card" style = "background-color: #38b83fb8; width: 100%">
                    <% } %>

                    <div class="content">
                        <div class="header"><%= success[i][0] %></div>
                        <div class="meta">
                            <a>Optenu par <%= success[i][1] %> % des joueurs</a>
                        </div>
                        <div class="description">
                            <%= success[i][2] %> <br> 
                        </div>
                    </div>
                </div>
            </div>
            <p></p>
        <% } %>
</div>


<p></p>
<p></p>

<form action="/profil" method="post" class="ui form">
    <div style="display: flex; justify-content: center; align-items: center;">
        <button type="submit" class="ui dark red labeled submit icon button" style="position:bottom ; bottom: 10%">
            <i class="close  icon"></i>
            Déconnection
        </button>
    </div>
</form>

<%- include('./menu.ejs') %>

