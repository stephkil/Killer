<!DOCTYPE html>
<html>
<head>

    <title> AshGames_Killer </title>

    <link rel="stylesheet" href="/assets/semantic/semantic.min.css">

    <style>

        .main.container{
            margin-top: 7em;
        }

    </style>
    
</head>

<body>

<div class="ui fixed inverted menu">

    <a href = "/" class = "header item" > Killer </a>
    <a href= "/auth/login" class="header item"> Connection </a>
    <a href= "/auth/register" class="header item"> Nouveau profil </a>

</div>

<div class="ui main container">

<h1> Login </h1>

<!-- ----------------------------------------------------------------------- -->
<!--                              Message flash                              -->
<!-- ----------------------------------------------------------------------- -->

<% if(locals.flash && locals.flash.error){ %>

    <div class="ui negative message">

        <%= flash.error %>

    </div>

<% } %>

<% if(locals.flash && locals.flash.success){ %>

    <div class="ui positive message">
    
        <%= flash.success %>
    
    </div>
    
<% } %>

<!-- ----------------------------------------------------------------------- -->
<!--                                login                                    -->
<!-- ----------------------------------------------------------------------- -->


<form action="/auth/login" method="post" class="ui form">

    <div class="field">
        <label for="loginPlayer"> Username </label>
        <textarea name="loginPlayer" id="name" style="height: 0px; width: 200px;"></textarea>
    </div>

    <div class="field">
        <label for="loginPlayer"> Password </label>
        <textarea name="loginPlayer" id="pwd" style="height: 0px; width: 200px;"></textarea>
    </div>
    
    <button type="submit" class="ui blue labeled submit icon button">

        <i class="icon edit"></i>Envoyer

    </button>

</form>

