<%- include('../header.ejs') %>

<h1> Login </h1>

<%- include('../flash.ejs') %>

<form action="/auth/login" method="post" class="form">

    <div class="ui form">
      <div class="field">
        <h5>Username</h5>
        <div class="ui left icon input">
          <i class="user icon"></i>
          <input type="text" 
          name="loginPlayer" 
          placeholder = "Username">
        </div>
      </div>

      <div class="field">
        <h5>Password</h5>
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <input type="password" 
          name="loginPlayer" 
          placeholder = "Password">
        </div>
      </div>
      
      <br>
      <button type="submit" class="ui green submit button" style="width:70%"> Login</button>
          
      <h2>
        Or
      </h2>

      <div class="middle aligned column">
        <div class="ui big button">
          <i class="signup icon"></i>
          <a href= "/auth/register"> Sign up </a>
        </div>
      </div>

    </div>

</form>


