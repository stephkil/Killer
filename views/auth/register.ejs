    <form action="/auth/register" method="post" class="form">
            
        <div class="ui form">

                <div class="middle aligned column">
                    <div class="ui big button">
                      <i class="signup icon"></i>
                      <a href= "/auth/login"> Login </a>
                    </div>
                </div>

                <h2>
                    Or
                </h2>

                <div class="field">
                    <h5>Username</h5>
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="text" 
                               name="paramPlayer"
                               id="name"
                               placeholder="Username"
                               maxlength="11"
                               oninput="updateCharacterCount()"> 
                    </div>
                    <h4><small>Caractères restants : <span id="charCount">11</span></small></p> 
                </div>

                <script>
                    function updateCharacterCount() {
                        const maxLength = 11;
                        const inputField = document.getElementById('name');
                        const charCount = document.getElementById('charCount');
                        
                        const remainingChars = maxLength - inputField.value.length;
                        
                        // Mise à jour du compteur de caractères restants
                        charCount.textContent = remainingChars;
                    }
                </script>

                
                <div class="field">
                    <h5>Password</h5>
                    <div class="ui left icon input">
                      <i class="lock icon"></i>
                      <input type="password" 
                      name="paramPlayer" 
                      id="pwd"
                      placeholder = "Password"
                      maxlength="40"
                      oninput="updateCharacterCountMdp()">
                    </div>
                    <h4><small>Caractères restants : <span id="MdpCharCount">40</span></small></h4> 
                </div>
                
                
                <script>
                    function updateCharacterCountMdp() {
                        const maxLength = 40;
                        const inputField = document.getElementById('pwd');
                        const charCount = document.getElementById('MdpCharCount');
                        
                        const remainingChars = maxLength - inputField.value.length;
                        
                        // Mise à jour du compteur de caractères restants
                        charCount.textContent = remainingChars;
                    }
                </script>

                <button type="submit" class="ui green submit button" style="width:70%"> Register </button>
        
        </div>
    </form>

