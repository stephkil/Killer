<%- include('../header.ejs') %>

<div class="ui breadcrumb">
    <h2> Creation Game </h2>

    <div class="section">Name & End Date</div>

    <div class="divider"> / </div>
    <div class="section">Add Players</div>

    <div class="divider"> / </div>
    <div class="active section">Select Task</div>
</div>

<%- include('../flash.ejs') %>

<h3 class="ui dividing header"> Ajouter les différents thème de mission </h3><br>


<form action="/game/task" method="post" class="ui form">

    <% for(var i = 0; i < nbList; i++){ %>
        <div class="switch-container">
            <label class="switch">
                <input type="checkbox" name="toggle" value="<%=list[i]%>"/>
                <span></span>
            </label>
            <span><%=list[i]%></span>
        </div>
        <br>
    <% } %>

    <script>
        $(document).ready(function() {
        $('.ui.checkbox').checkbox();
        });
    </script>
    
    <br>

    <h3 class="ui dividing header"> Lancer la partie </h3><br>

    
    <button type="submit" class="ui green labeled submit icon button" name="answer" value='start'>
        <i class="icon edit"></i> Start Game
    </button>
      
</form>






