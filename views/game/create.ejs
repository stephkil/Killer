    <form action="/game/create" method="post" class="ui form">
      <div class="ui form">

        <h3> Nom de la Partie </h3>

        <div class="field">
            <div class="ui left icon input">
              <input type="text" 
              name="paramGame" 
              placeholder = "name"
              required>
            </div>
        </div>

        <h3> Date de fin </h3>

        <div class="field">
          <div class="ui left icon input">
            <input type="datetime-local" 
            name="paramDate"
            required>
          </div>
        </div>

        <p></p>

        <button type="submit" class="ui blue submit button"> Suivant </button>

      </div>
    </form>


