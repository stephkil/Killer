<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> AshGames_Killer </title>
    <link rel="stylesheet" href="/assets/semantic/semantic.min.css">
    
</head>

<body>

    <div class="menu">

        <div class="ui pointing menu">
            <a href = "/" class="item"> Killer </a>
            <a href= "/friend" class="item"> Friend </a>
            <a href= "/game/create" class="active item"> Create Game </a>
            <a href= "/game/load" class="item"> Load Game </a>
            <a href= "/game/historique" class="item"> Historique</a>
            
            <a href= "../auth/disconnect" class="right item"> Disconnect </a>
        </div>
          
        <p></p>
    </div>


<div class="ui main container">

<h1> Create Game </h1>

<!-- ----------------------------------------------------------------------- -->
<!--                              Message flash                              -->
<!-- ----------------------------------------------------------------------- -->

<% if(locals.flash && locals.flash.error){ %>

    <div class="ui negative message">

        <%= flash.error %>

    </div>

<% } %>

<% if(locals.flash && locals.flash.success){ %>

    <div class="ui positive message">
    
        <%= flash.success %>
    
    </div>
    
<% } %>

<!-- ----------------------------------------------------------------------- -->
<!--                                Create Game                              -->
<!-- ----------------------------------------------------------------------- -->


    <form action="/game/create" method="post" class="ui form">

        <div class="field">
            <label for="paramGameName">Nom de la Partie</label>
            <textarea name="paramGame" id="name" style="height: 0px; width: 200px;"></textarea>
        </div>

        <div class="field">
            <label for="paramGameTps">Temps Partie</label>
            <textarea name="paramGame" id="tps" style="height: 0px; width: 200px;"></textarea>
        </div>

        <button type="submit" class="ui blue labeled submit icon button">

            <i class="icon edit"></i>Envoyer

        </button>

    </form>


    <% include ('../footer.ejs') %>