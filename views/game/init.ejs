<h1> Init Game </h1>

<!-- ----------------------------------------------------------------------- -->
<!--                              Message flash                              -->
<!-- ----------------------------------------------------------------------- -->

<% if(locals.flash && locals.flash.error){ %>

    <div class="ui negative message">

        <%= flash.error %>

    </div>

<% } %>

<% if(locals.flash && locals.flash.success){ %>

    <div class="ui positive message">
    
        <%= flash.success %>
    
    </div>
    
<% } %>>

<!-- ----------------------------------------------------------------------- -->
<!--                                Init                                -->
<!-- ----------------------------------------------------------------------- -->

<form action="/game/init" method="post" class="ui form">

    <% for (var i = 0; i < game.nbPlayer;  i++ ) { %>
        <p>  Joueur <%= i+1 %> - <%=game.TableOfPlayers[i].name%> 
    <% } %>
    
    <p></p>

    Ami que vous pouvez ajouter Ã  la partie :

    <p></p>

    <% for (var i = 0; i < listOfFriend.length; i++) { %>
        <button type="submit" class="ui blue labeled submit icon button game-button" name="answer" value="<%= listOfFriend[i] %>">
            <i class="icon edit"></i> <%= listOfFriend[i] %> 
        </button>
    <% } %>
    
    <p></p>
        
    <button type="submit" class="ui blue labeled submit icon button" name="answer" value='start'>

        <i class="icon edit"></i> Start Game

    </button>

</form>

