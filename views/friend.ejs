<%- include('./header.ejs') %>

<h1> Friends </h1>

<%- include('./flash.ejs') %>


<!-- ----------------------------------------------------------------------- -->
<!--                                Init                                     -->
<!-- ----------------------------------------------------------------------- -->

<form action="/friend" method="post" class="ui form">

    <div class="ui form">
        <div class="field">
            <label> Ajouter un nouvel ami </label>
            <div class="ui left icon input">
                <i class="user icon"></i>
                <input type="text" 
                name="nameOfFriend" 
                placeholder = "Username">
            </div>
        </div>
        
        <button type="submit" class="ui blue labeled submit icon button">

            <i class="icon edit"></i> Ajouter

        </button>
    </div>
</form>

<p></p>
<p></p>

Your friends : 
<p></p>

<div class="ui two column grid">
    <% for (var i = 0; i < listOfFriend.length; i++ ) { %>
        <div class="column">
            <div class="ui card">
                <!--  
                <div class="image-container">
                    <img src="/assets/picture/perso<%=i%>.png" >
                </div>
                -->
                
                <div class="content">
                    <div class="header"><%= listOfFriend[i][0] %></div>
                    <div class="meta">
                        <a><%= listOfFriend[i][1] %></a>
                    </div>
                    <div class="description">
                        Survivant :  <%= listOfFriend[i][3] %> <br> 
                        Top Killer :  <%= listOfFriend[i][4] %> <br> 
                        Killer Alpha :  <%= listOfFriend[i][5] %> <br> 
                        Killer SuprÃªme :  <%= listOfFriend[i][6] %> <br>  
                        <br>
                        Nombre de kill :  <%= listOfFriend[i][7] %> <br> 
                        Nombre succes :  <%= listOfFriend[i][8].length %> / 10<br> 
                    </div>
                </div>

                <div class="extra content" style="display: flex; justify-content: space-between; align-items: center;">
                    <span>
                        <i class="game icon"></i>
                        <%= listOfFriend[i][2] %> <br>
                        Games
                    </span>

                    <span style="margin-left: auto;">
                        <form action="/delete-friend" method="post">
                            <input type="hidden" name="del" value="<%= listOfFriend[i][0] %>">
                            <button type="submit" class="ui mini red button">
                                Delete
                            </button>
                        </form>
                    </span>
                </div>  

            </div>
        </div>
    <% } %>
</div>


